{% assign product_found = false %}
{% assign skip = false %}
{% assign collection_group = products | map: 'id' %}
{% assign collection_group_thumb = collection_group | append : 'thumb' %}
{% assign collection_group_mobile = collection_group | append : 'mobile' %}

{% capture new_row %}
    <br class="clear product_clear" />
{% endcapture %}

<div itemtype="http://schema.org/ItemList" class="products columns is-multiline">
  {%- comment %}<locksmith:e285>{% endcomment -%}
    {%- assign locksmith_5289_forloop__size = 0 %}{% for product in products limit: limit %}{% capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, variable: 'transparent' %}{% endcapture %}{% if var == 'true' %}{% assign locksmith_5289_forloop__size = locksmith_5289_forloop__size | plus: 1 %}{% endif %}{% endfor %}{% assign locksmith_5289_forloop__index = nil -%}
  {%- comment %}</locksmith:e285>{% endcomment -%}
  {% for product in products limit: limit %}
{%- comment %}<locksmith:2230>{% endcomment -%}
  {%- capture var %}{% render 'locksmith-variables', scope: 'subject', subject: product, variable: 'transparent' %}{% endcapture %}{% if var == "true" %}{% if locksmith_5289_forloop__index == nil %}{% assign locksmith_5289_forloop__index = 1 %}{% assign locksmith_5289_forloop__index0 = 0 %}{% else %}{% assign locksmith_5289_forloop__index = locksmith_5289_forloop__index | plus: 1 %}{% assign locksmith_5289_forloop__index0 = locksmith_5289_forloop__index0 | plus: 1 %}{% endif %}{% if locksmith_5289_forloop__index == 1 %}{% assign locksmith_5289_forloop__first = true %}{% else %}{% assign locksmith_5289_forloop__first = false %}{% endif %}{% if locksmith_5289_forloop__index == locksmith_5289_forloop__size %}{% assign locksmith_5289_forloop__last = true %}{% else %}{% assign locksmith_5289_forloop__last = false %}{% endif %}{% assign locksmith_5289_forloop__rindex = locksmith_5289_forloop__size | minus: locksmith_5289_forloop__index | minus: 1 %}{% assign locksmith_5289_forloop__rindex0 = locksmith_5289_forloop__size | minus: locksmith_5289_forloop__index0 | minus: 1 %}{% else %}{% continue %}{% endif -%}
{%- comment %}</locksmith:2230>{% endcomment -%}
{%- include 'bold-product' with product, hide_action: 'skip' -%}
    {% if product.id == skip_product.id or skip == true %}
      {% assign product_found = true %}
    {% else %}
      {% if locksmith_5289_forloop__rindex0 == 0 and product_found == false and forloop.length != products.count and template != 'search' %}
        {% assign skip = true %}
      {% else %}

        {% include 'product-thumbnail' with product-loop %}

        {% if products_per_row == "2" %}
          {% cycle collection_group: '', new_row %}
        {% elsif products_per_row == "3" %}
          {% cycle collection_group: '', '', new_row %}
        {% elsif products_per_row == "4" %}
          {% cycle collection_group: '', '', '', new_row %}
        {% endif %}
      {% endif %}
    {% endif %}
  {% endfor %}
</div>
